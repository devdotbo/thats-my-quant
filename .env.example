# Polygon.io API Configuration
# Get your API key from https://polygon.io/dashboard/api-keys
polygon_io_api_key=your_polygon_api_key_here

# Polygon.io S3 Flat Files Access
# Get these credentials from Polygon.io support after subscribing to flat files
polygon_io_s3_access_key_id=your_s3_access_key_here
polygon_io_s3_access_secret=your_s3_secret_key_here
polygon_io_s3_endpoint=https://files.polygon.io
polygon_io_s3_bucket=flatfiles

# Optional: Environment Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO

# Optional: Database Configuration (for future use)
# DATABASE_URL=sqlite:///./data/backtest_results.db

# Optional: Notification Settings (for alerts)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# EMAIL_ALERTS_ENABLED=false